{{!< default}}

<main class="pure-g">
	<div class="pure-u-1 pure-u-md-1-4">{{> posts_list}}</div>
	
	<div id="content" class="pure-u-1 pure-u-md-3-4">
		{{> banner}}
		
		{{#post}}
		    <article>
				<header class="pure-g">
					<div class="pure-u-1"><img class="post-image" src="{{image}}" /></div>
					
					<div class="pure-u-2-3">
						<h2>{{title}}</h2>
						<time>{{date format="DD. MMM YYYY"}}</time>
					</div>
					
					<div class="pure-u-1-3">
						{{#if author}}
			                <h4>{{author.name}}</h4>
			                <p>{{author.bio}}</p>
			            {{/if}}
					</div>
				</header>
				
				<p>{{content}}</p>
		   	</article>
		{{/post}}
		
		{{#is "post"}}
			<footer>
	            <div id="disqus_thread"></div>
	            <script type="text/javascript">
					var disqus_shortname = 'kennstewayne'; // required: replace example with your forum shortname
	                if(disqus_shortname == '') {
	                    jQuery('#disqus_thread').html('Please set up Disqus shortname! (See documentation)');
	                }
	                /* * * DON'T EDIT BELOW THIS LINE * * */
	                (function() {
	                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
	                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
	                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	                })();
	            </script>
	            <noscript><a href="http://disqus.com/?ref_noscript">JavaScript required</a></noscript>
			</footer>
		{{/is}}
	</div>
</main>