{{!< default}}

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
<script type="text/javascript" src="http://builds.handlebarsjs.com.s3.amazonaws.com/handlebars-v2.0.0.js"></script>
<script type="text/javascript" src="{{asset 'js/posts_list.js'}}"></script>

<main class="pure-g">
	<div id="posts_list" class="pure-u-1 pure-u-md-1-4">{{! container filled by js/posts_list.js}}</div>
	
	<div id="content" class="pure-u-1 pure-u-md-3-4">
		{{> banner}}

		{{#post}}
            <article>
                <header class="pure-g post-wrapper">
                    <span class="pure-u-1 pure-u-sm-1-2">
                        <section class="post">
                            <time class="post-date">{{date format="DD. MMM YYYY"}}</time>
                            <h2 class="post-title">{{title}}</h2>

                            {{#if author}}
                                <h4>{{author.name}}</h4>
                                <p>{{author.bio}}</p>
                            {{/if}}
                        </section>
                    </span>

                    <span class="pure-u-1 pure-u-sm-1-2">
                        <img class="post-image" src="{{#if image}}{{image}}{{else}}{{asset 'images/ImageMissing.jpg'}}{{/if}}">
                    </span>
                </header>

                <p class="post-content">{{{content}}}</p>
            </article>
		{{/post}}
		
		{{#is "post"}}
			<footer>
	            <aside id="disqus_thread"></aside>
	            <script type="text/javascript">
					var disqus_shortname = 'kennstewayne'; // required: replace example with your forum shortname
	                if(disqus_shortname == '') {
	                    jQuery('#disqus_thread').html('Please set up Disqus shortname! (See documentation)');
	                }
	                /* * * DON'T EDIT BELOW THIS LINE * * */
	                (function() {
	                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
	                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
	                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	                })();
	            </script>
	            <noscript><a href="http://disqus.com/?ref_noscript">JavaScript required</a></noscript>
			</footer>
		{{/is}}
	</div>
</main>